# Data Sentinel v1 - Vercel Environment Configuration
# Copy this to .env.local for Vercel deployment

# Database Configuration
# For Vercel, use external database (PostgreSQL, PlanetScale, etc.)
DATABASE_URL=postgresql://username:password@host:port/database
# Or use Vercel Postgres: https://vercel.com/docs/storage/vercel-postgres
# DATABASE_URL=postgres://default:password@ep-xxx.us-east-1.postgres.vercel-storage.com/verceldb

# Data Warehouse (use external service for production)
DW_CONN_STRING=postgresql://username:password@host:port/dw_database

# LLM Configuration (REQUIRED)
LLM_API_KEY=your-actual-api-key-here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# For Groq (faster and cheaper):
# LLM_API_KEY=gsk_your-actual-groq-api-key-here
# LLM_PROVIDER=groq
# LLM_MODEL=llama-3.1-8b-instant

# Authentication
SECRET_KEY=your-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Integrations (Optional)
SLACK_WEBHOOK_URL=
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=1
BATCH_SIZE=1000

# Data Warehouse Settings
DW_SAMPLE_SIZE=10000
ANOMALY_THRESHOLD=0.7
HEALTH_SCORE_THRESHOLD=0.8

# Vercel Specific
VERCEL=1
VERCEL_ENV=production
