# Data Sentinel v1 - Simple Configuration
# Copy this to .env and update with your values

# Database Configuration (SQLite for simplicity)
DATABASE_URL=sqlite:///./data/sentinel.db
DW_CONN_STRING=duckdb:///data/dw.db

# LLM Configuration (REQUIRED)
# Choose one: OpenAI or Groq
LLM_API_KEY=sk-your-openai-api-key-here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# For Groq (faster and cheaper):
# LLM_API_KEY=gsk_your-groq-api-key-here
# LLM_PROVIDER=groq
# LLM_MODEL=llama-3.1-8b-instant

# Authentication
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Integrations (Optional)
SLACK_WEBHOOK_URL=
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
MAX_WORKERS=1
BATCH_SIZE=1000

# Data Warehouse Settings
DW_SAMPLE_SIZE=10000
ANOMALY_THRESHOLD=0.7
HEALTH_SCORE_THRESHOLD=0.8
