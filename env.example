# =============================================================================
# DATA SENTINEL - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to server/.env and fill in your actual values
# Never commit .env files with real credentials to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Data Sentinel
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Default for development)
DATABASE_URL=sqlite:///./sentinel.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/sentinel

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# Choose your LLM provider: openai, groq, anthropic
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Groq Configuration (Free Alternative)
GROQ_API_KEY=gsk_your-groq-api-key-here
GROQ_MODEL=llama3-8b-8192

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# =============================================================================
# DATA PROCESSING SETTINGS
# =============================================================================
BATCH_SIZE=1000
SAMPLE_SIZE=10000
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,parquet,json,xlsx

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo-name

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#data-quality

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@datasentinel.ai

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=logs/sentinel.log

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Number of worker processes
WORKERS=4

# Request timeouts (seconds)
REQUEST_TIMEOUT=60
CONNECT_TIMEOUT=10

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Ports
SERVER_PORT=8000
CLIENT_PORT=8501

# Network
NETWORK_NAME=sentinel-network

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Auto-reload on code changes
AUTO_RELOAD=true

# Enable debug toolbar
DEBUG_TOOLBAR=true

# Test database
TEST_DATABASE_URL=sqlite:///./test_sentinel.db

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# In production, make sure to:
# 1. Set DEBUG=false
# 2. Use a strong SECRET_KEY
# 3. Configure proper DATABASE_URL (PostgreSQL recommended)
# 4. Enable HTTPS/TLS
# 5. Set appropriate CORS_ORIGINS
# 6. Configure proper logging and monitoring
# 7. Use environment-specific API keys
# 8. Enable security headers
# 9. Configure backup and disaster recovery
# 10. Set up proper error handling and alerting

