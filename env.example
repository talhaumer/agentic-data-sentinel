# Data Sentinel Environment Configuration - Clean Version
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./sentinel.db
DW_CONN_STRING=sqlite:///./dw.db

# =============================================================================
# REDIS CONFIGURATION (Optional for v1)
# =============================================================================
REDIS_URL=memory://

# =============================================================================
# LLM CONFIGURATION (Required for AI explanations)
# =============================================================================
# Choose one provider:
# For OpenAI:
# LLM_API_KEY=sk-your-openai-api-key-here
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4

# For Groq (alternative):
LLM_API_KEY=gsk_your-groq-api-key-here
LLM_PROVIDER=groq
LLM_MODEL=llama-3.1-70b-versatile

# =============================================================================
# AUTHENTICATION
# =============================================================================
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# EXTERNAL INTEGRATIONS - GITHUB ONLY
# =============================================================================

# GitHub Integration - Required for issue creation
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_OWNER=your-github-username-or-org
GITHUB_REPO=your-repo-name

# =============================================================================
# LANGCHAIN OBSERVABILITY (Optional)
# =============================================================================
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=data-sentinel
ENVIRONMENT=development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
LOG_LEVEL=INFO
MAX_WORKERS=4
BATCH_SIZE=1000

# =============================================================================
# MONITORING (Optional)
# =============================================================================
PROMETHEUS_PORT=8001

# =============================================================================
# DATA WAREHOUSE SETTINGS
# =============================================================================
DW_SAMPLE_SIZE=10000
ANOMALY_THRESHOLD=0.7
HEALTH_SCORE_THRESHOLD=0.8
