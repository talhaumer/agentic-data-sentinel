{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "requirements.txt",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "DATABASE_URL": "sqlite:///./data/sentinel.db",
    "LLM_PROVIDER": "groq",
    "GROQ_API_KEY": "",
    "SECRET_KEY": ""
  }
}
